# =============================================================================
# FUND MANAGEMENT SYSTEM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to config.env and update values for your environment

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
PORT=3002
NODE_ENV=development

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password
DATABASE_NAME=fund_management
DB_HOST=localhost
DATABASE_PORT=5432

# -----------------------------------------------------------------------------
# GIP API ENDPOINTS
# -----------------------------------------------------------------------------
GIP_BASE_URL=http://172.21.8.21:9000/SwitchGIP/WSGIP
GIP_NEC_URL=http://172.21.8.21:9000/SwitchGIP/WSGIP
GIP_FTD_URL=http://172.21.8.21:9000/SwitchGIP/WSGIP
GIP_FTC_URL=http://172.21.8.21:9000/SwitchGIP/WSGIP
GIP_TSQ_URL=http://172.21.8.21:9000/SwitchGIP/WSGIP
GIP_CALLBACK_URL=http://your-server:3002/api/callback/gip
GIP_TIMEOUT=30000

# -----------------------------------------------------------------------------
# JWT AUTHENTICATION
# -----------------------------------------------------------------------------
JWT_SECRET=change-this-to-a-secure-random-string
JWT_EXPIRES_IN=24h

# -----------------------------------------------------------------------------
# TSQ (Transaction Status Query) CONFIGURATION
# -----------------------------------------------------------------------------
TSQ_MAX_ATTEMPTS=3
TSQ_INTERVAL_MINUTES=5

# -----------------------------------------------------------------------------
# CALLBACK RETRY CONFIGURATION
# -----------------------------------------------------------------------------
CALLBACK_MAX_RETRIES=5
CALLBACK_INITIAL_DELAY=5
CALLBACK_BACKOFF_MULTIPLIER=2
CALLBACK_MAX_DELAY=3600

# -----------------------------------------------------------------------------
# TIMEOUT CONFIGURATION (in minutes)
# -----------------------------------------------------------------------------
TIMEOUT_NEC=1
TIMEOUT_FTD_CALLBACK=30
TIMEOUT_FTC_CALLBACK=30
TIMEOUT_TRANSACTION=60

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Set to 'true' or 'false' to enable/disable features

# -----------------------------------------------------------------------------
# SECURITY FEATURES (disabled by default except fraud detection)
# -----------------------------------------------------------------------------
FEATURE_IP_WHITELIST=false
FEATURE_REQUEST_SIGNING=false
FEATURE_API_KEY_ROTATION=false
FEATURE_FRAUD_DETECTION=true
FEATURE_ENCRYPTION_AT_REST=false
FEATURE_RATE_LIMIT_TIERS=false

# -----------------------------------------------------------------------------
# OPERATIONAL FEATURES (enabled by default)
# -----------------------------------------------------------------------------
FEATURE_BULK_TRANSACTIONS=true
FEATURE_SCHEDULED_TRANSFERS=true
FEATURE_RECURRING_PAYMENTS=true
FEATURE_TRANSACTION_TEMPLATES=true
FEATURE_BATCH_PROCESSING=true
FEATURE_TRANSACTION_LIMITS=true
FEATURE_BUSINESS_HOURS=true

# -----------------------------------------------------------------------------
# MONITORING & ALERTING (enabled by default)
# -----------------------------------------------------------------------------
FEATURE_REALTIME_ALERTS=true
FEATURE_THRESHOLD_ALERTS=true
FEATURE_SLA_MONITORING=true
FEATURE_ANOMALY_DETECTION=true
FEATURE_UPTIME_MONITORING=true

# -----------------------------------------------------------------------------
# REPORTING & ANALYTICS (enabled by default)
# -----------------------------------------------------------------------------
FEATURE_SETTLEMENT_REPORTS=true
FEATURE_FEE_CALCULATION=true
FEATURE_EXPORT_REPORTS=true
FEATURE_SCHEDULED_REPORTS=true
FEATURE_INSTITUTION_BILLING=true
FEATURE_TREND_ANALYSIS=true

# -----------------------------------------------------------------------------
# RESILIENCE & PERFORMANCE (disabled by default)
# -----------------------------------------------------------------------------
FEATURE_CIRCUIT_BREAKER=false
FEATURE_REQUEST_QUEUING=false
FEATURE_IDEMPOTENCY_KEYS=false

# -----------------------------------------------------------------------------
# DEVELOPER EXPERIENCE (disabled by default)
# -----------------------------------------------------------------------------
FEATURE_SANDBOX_MODE=false
FEATURE_API_DOCUMENTATION=false
FEATURE_WEBHOOK_TESTING=false
FEATURE_REQUEST_LOGS=false

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# Slack Alerts
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#alerts

# Email Alerts (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL_FROM=alerts@fundmanagement.local
ALERT_EMAIL_TO=

# SMS Alerts (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
ALERT_SMS_TO=

# =============================================================================
# FRAUD DETECTION THRESHOLDS
# =============================================================================
FRAUD_MAX_TXN_PER_MIN=10
FRAUD_MAX_AMOUNT=1000000
FRAUD_MAX_DAILY_AMOUNT=10000000
FRAUD_SUSPICIOUS_HOUR_START=0
FRAUD_SUSPICIOUS_HOUR_END=5
FRAUD_VELOCITY_WINDOW=5

# =============================================================================
# BUSINESS HOURS
# =============================================================================
BUSINESS_HOURS_TIMEZONE=Africa/Accra
BUSINESS_HOURS_START=8
BUSINESS_HOURS_END=18
BUSINESS_WORK_DAYS=1,2,3,4,5

# =============================================================================
# SANDBOX MODE (for testing)
# =============================================================================
SANDBOX_DEFAULT_ACTION_CODE=000
SANDBOX_SIMULATE_DELAY=true
SANDBOX_DELAY_MS=500
SANDBOX_FAILURE_RATE=0
